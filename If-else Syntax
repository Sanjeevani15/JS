       <script> 
    
    //Control Flow Statements in JAVASCRIPT
    var time=prompt("what's the time ? ");
    if(time>5 && time<12)
    alert("Good Morning");
    else if(time>12 && time<14)
    alert("Good Afternoon");
    else if(time>14 && time<17)
    alert("Good Evening");
    else
    alert("Good Night");
    

    document.write ("<br>");

    

  

    </script>
